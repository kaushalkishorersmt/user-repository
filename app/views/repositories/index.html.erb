<h1>Repositories List ( <%= current_user.username %> )</h1>
  <%= button_to "Sign Out", signout_path, method: :delete %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>
        <p>Name</p>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td>
          <%= link_to repository[:name], repositories_show_path(repository[:full_name]) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
